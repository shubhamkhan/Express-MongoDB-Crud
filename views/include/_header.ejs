<header class="p-3 bg-dark text-white">
    <div class="container-fluid">
        <div class="d-flex flex-wrap justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="32" fill="currentColor" class="bi bi-egg" viewBox="0 0 16 16">
                    <path d="M8 15a5 5 0 0 1-5-5c0-1.956.69-4.286 1.742-6.12.524-.913 1.112-1.658 1.704-2.164C7.044 1.206 7.572 1 8 1c.428 0 .956.206 1.554.716.592.506 1.18 1.251 1.704 2.164C12.31 5.714 13 8.044 13 10a5 5 0 0 1-5 5zm0 1a6 6 0 0 0 6-6c0-4.314-3-10-6-10S2 5.686 2 10a6 6 0 0 0 6 6z"/>
                </svg>
                FoodResto
            </a>
            <ul class="nav col-12 col-lg-auto me-lg-auto me-2 justify-content-center mb-md-0">
                <li><a href="#" class="nav-link px-2 text-white">Home</a></li>
            </ul>

              <div class="text-end">
                <% if (user) { %>
                    <span class="text-white my-2"><%= title %><%= user %></span>
                    <button class="btn btn-sm btn-primary mx-2" style="width: 70px; height: 30px; margin-top: 5px;"><a class="text-white" style="text-decoration: none;" href="/logout">Log Out</a></button>
                <% } else { %>
                    <span class="text-white my-2"><%= title %></span>
                    <button class="btn btn-sm btn-outline-light mx-2 text-white" style="width: 70px; height: 30px; margin-top: 5px;"><a class="text-white" style="text-decoration: none;" href="/login">Login</a></button>
                    <button class="btn btn-sm btn-warning" style="width: 70px; height: 30px; margin-top: 5px;" id="signup" data-bs-toggle="modal" data-bs-target="#signup_modal">Sign Up</button>
                <% } %>
              </div>
        </div>
    </div>
</header>